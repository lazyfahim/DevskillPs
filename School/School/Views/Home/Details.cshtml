@model Student

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container center_div" style="width: 50rem;">
    <h2>Details of  Student</h2>
        <div class="form-group col-md-4" >
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" disabled class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name"></span>
            </div>
            <label asp-for="DateOfBirth" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DateOfBirth" disabled value="@Model.DateOfBirth"  asp-format="{0:dd/MM/yyyy HH:mm}"   class="form-control"/>
                <span asp-validation-for="DateOfBirth" ></span>
            </div>
            <a asp-action="EditStudent" asp-route-Id="@Model.Id" class="btn btn-primary"> Edit </a>
        </div>
</div>
@section Styles
{
    .center_div{
        margin: 0 auto;
        width:80% /* value of your choice which suits your alignment */
    }
}
