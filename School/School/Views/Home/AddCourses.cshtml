@model CourseModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container center_div" style="width: 50rem;">
    <h2>Insert Courses</h2> @User.Claims.
    <form asp-controller="Home" asp-action="AddCourses" method="post" >
        <div class="form-group col-md-4" >
            <label asp-for="Title" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title"></span>
            </div>
            <label asp-for="Fee" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Fee"    class="form-control"/>
                <span asp-validation-for="Fee" ></span>
            </div>
            <label asp-for="SeatCount" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="SeatCount"    class="form-control"/>
                <span asp-validation-for="SeatCount" ></span>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>
@section Styles
{
    .center_div{
        margin: 0 auto;
        width:80% /* value of your choice which suits your alignment */
    }
}

